<div class="back-link"><%= link_to '<< Back to All Items', items_path %></div>

<% if notice %>
  <div class="alert-box success radius"><%= notice %></div>
<% end %>

<h1>
  <%= @item.name %>
</h1>
<div class="small-4 columns">
  <%= image_tag @item.image_url, class: "featured" %>
</div>
<div class="small-4 columns">
  <p>
    <%= @item.description %>
  </p>

  <p>
    Starting price:
    <%= number_to_currency(@item.starting_price) %>
  </p>
  <%= render partial: 'highest_bid', locals: {bid: @bid}%>
  <%= render partial: 'bid', locals: {bid: @bid}%>
</div>
<div class="small-4 columns">
</div>
